<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/LinearLayout01"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:background="@drawable/titleback">
		<Button
			android:id="@+id/back"
			android:layout_width="26dp"
			android:layout_height="26dp"
			android:background="@drawable/fanhui"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical">
		</Button>
		<TextView
			android:layout_width="250dp"
			android:layout_marginLeft="10dp"
			android:layout_height="wrap_content"
			android:textSize="22dp"
			android:textColor="@color/black"
			android:gravity="center"
			android:text="足迹"
			android:layout_gravity="center_vertical"/>

		<Button
			android:id="@+id/bmenu"
			android:layout_width="26dp"
			android:layout_height="26dp"
			android:layout_marginLeft="10dp"
			android:layout_gravity="center_vertical"
			android:background="@drawable/zj_btn_menu"/>

	</LinearLayout>
	<FrameLayout
		android:layout_below="@+id/LinearLayout01"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="bottom">

		<com.baidu.mapapi.map.MapView
			android:id="@+id/myMapView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"/>

		<LinearLayout
			android:id="@+id/lmenu"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal"
			android:background="@drawable/titleback"
			android:layout_gravity="bottom"
			android:gravity="center">
			<Button
				android:id="@+id/bleft"
				android:layout_width="26dp"
				android:layout_height="26dp"
				android:background="@drawable/myselector_zj_left"
				android:layout_marginLeft="30dp"
				android:layout_gravity="center_vertical">
			</Button>
			<TextView
				android:text="Current Time"
				android:textSize="20dp"
				android:id="@+id/datemenu"
				android:gravity="center"
				android:layout_width="120dp"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:layout_gravity="center_vertical">
			</TextView>
			<Button
				android:text=""
				android:id="@+id/bright"
				android:layout_width="26dp"
				android:layout_height="26dp"
				android:background="@drawable/myselector_zj_right"
				android:layout_marginLeft="10dp"
				android:layout_gravity="center_vertical">
			</Button>
			<Button
				android:text="全部"
				android:id="@+id/all"
				android:layout_width="wrap_content"
				android:layout_height="30dp"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="35dp"
				android:background="@drawable/editsharptranparent"
				android:textSize="20dp"
				android:layout_gravity="center_vertical">
			</Button>
		</LinearLayout>
	</FrameLayout>

</RelativeLayout>
