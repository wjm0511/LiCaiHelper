<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#00000000">
        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/savetime"
                android:id="@+id/savetime"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <Button
                android:text="@string/threemonth"
                android:id="@+id/threemonth"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center"
                android:background="@drawable/text"
                android:gravity="center">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/inputAmt"
                android:id="@+id/inputAmt"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                >
            </TextView>
            <EditText
                android:text="0.0"
                android:textSize="16dp"
                android:id="@+id/jine"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:background="@drawable/text"
                android:gravity="center"
                >
            </EditText>
            <Button
                android:text="万元"
                android:id="@+id/yuan"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:background="@drawable/text"
                android:gravity="center">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/yearRate"
                android:id="@+id/yearRate"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                >
            </TextView>
            <EditText
                android:text="0.0"
                android:textSize="16dp"
                android:id="@+id/lilv"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:background="@drawable/text"
                android:gravity="center"
                >
            </EditText>
            <Button
                android:text="%"
                android:id="@+id/bfh"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:background="@drawable/text"
                android:gravity="center">
            </Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

