<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/titleback"
        android:divider="#0000">

        <Button
            android:id="@+id/fanhui"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/fanhui"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/jizhangText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="记账"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:stretchColumns="*">
            <TableRow>
                <TextView />
                <TextView />
                <TextView />
                <TextView />
                <TextView />

            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/jine"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/jineEdit"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/editsharp"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:layout_height="30dp"
                    android:layout_span="4" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/shouzhi"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <Spinner
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/shouzhiSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/editsharp"
                    android:gravity="center"
                    android:layout_span="4">
                </Spinner>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/kemu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center" />
                <Spinner
                    android:id="@+id/kemuSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:background="@drawable/editsharp"
                    android:layout_span="4">
                </Spinner>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/riqi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/riqiEdit"
                    android:layout_width="match_parent"
                    android:background="@drawable/editsharp"
                    android:textSize="18dp"
                    android:layout_height="30dp"
                    android:layout_span="4">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/fangshi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
                <Spinner
                    android:id="@+id/fangshiSpinner"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="30dp"
                    android:background="@drawable/editsharp"
                    android:gravity="center"
                    android:layout_span="4">
                </Spinner>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/didian"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/didianEdit"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:textSize="18dp"
                    android:layout_height="30dp"
                    android:background="@drawable/editsharp"
                    android:layout_span="4" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="@string/beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/beizhuEdit"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:layout_height="60dp"
                    android:gravity="left|top"
                    android:background="@drawable/editsharp"
                    android:layout_span="4" />
            </TableRow>

        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/savebtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/baocun"
                android:background="@drawable/btnshap" />
            <Button
                android:id="@+id/againbtn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="@string/again"
                android:background="@drawable/btnshap" />

        </LinearLayout>

</LinearLayout>